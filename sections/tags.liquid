{%- capture section_styles -%}
{%- if section.settings.background != 'hide' -%}
{%- if section.settings.background_width == "content_width" -%}
@media (min-width: 1025px){
 #section-tags-{{ section.id }} .section-background{
   padding-left: 0;
   padding-right: 0;
  }
}
{%- endif -%}
{%- liquid
	capture color
	if section.settings.background == 'color'
    echo section.settings.color_background
    else
    echo section.settings.gradient
    endif
    endcapture
-%}
{%- if color != "rgba(0,0,0,0)" and color != blank -%}
#section-tags-{{ section.id }}{
  --color-section-background: {{ color }};
}
{%- endif -%}
{%- if section.settings.remove_bottom_spacing -%}
#section-tags-{{ section.id }}.section-background,
#section-tags-{{ section.id }} .section-background{
  padding-bottom: 0;
}
{%- endif -%}
{%- endif -%}
{%- endcapture -%}
<style>
  {%- if section.settings.color_button != "rgba(0,0,0,0)" -%}
  #section-tags-{{ section.id }} .section-tags__container{
    --color-base:{{ section.settings.color_button }};
  }
  {%- endif -%}
  {%- if section.settings.color_button_border != "rgba(0,0,0,0)" -%}
  #section-tags-{{ section.id }} .section-tags__container{
    --color-lines-borders:{{ section.settings.color_button_border }};
  }
  {%- endif -%}
  .section-tags__container{
    display:flex;
    flex-wrap:wrap;
    gap:10px;
  }
  .section-tags .btn{
    color:var(--color-base);
  }
  @media (max-width:576px){
    .section-tags__container>*{
      flex:0 0 calc(50% - 5px);
    }
    .section-tags .btn{
      height:auto;
      min-height:50px;
      padding:16px 10px;
    }
  }
  {{ section_styles }}
</style>

{%- capture page_width -%}{%- if section.settings.width != "default" %}{{ section.settings.width }}{%- else -%}{{ settings.page_width_main }}{%- endif -%}{%- endcapture -%}
<div id="section-tags-{{ section.id }}" class="section-tags top-spacing-{{ section.settings.top_spacing }}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="tags">
  <div class="{{ page_width }} mb--last-child-0">
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius mb--last-child-0">{%- endif -%}
    
    {%- render "section-heading" section:section show_heading_always:false -%}
    
    {%- if section.blocks.size > 0 -%}
    <div class="grid el_mt_40 {{ section.settings.texts_aligment }}">
      <div class="col-1 {{ section.settings.grid }}">
        <div class="section-tags__container{% if section.settings.heading_aligment == "text-center" %} justify-content-center{% endif %}">
          {%- for block in section.blocks -%}
            <a{% if block.settings.link_url != blank %} href="{{ block.settings.link_url }}"{% endif %} class="btn btn_border btn_zoom"
               {% if block.settings.link_url == blank %} aria-disabled="true"{% endif %}
               {{ block.shopify_attributes }}
               ><span>{{ block.settings.link_name }}</span></a>
          {%- endfor -%}
        </div>
      </div>
    </div>
    {%- endif -%}

    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}</div>{%- endif -%}
  </div>
</div>

