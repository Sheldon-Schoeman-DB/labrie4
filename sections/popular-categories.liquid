{%- if settings.animate_content_show -%}
<link rel="stylesheet" href="{{ 'section-popular-categories.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-popular-categories.css' | asset_url | stylesheet_tag }}</noscript>
{%- else -%}
{{ 'section-popular-categories.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- capture section_styles -%}
{%- if section.settings.color_svg != "rgba(0,0,0,0)" -%}
{%- endif -%}
{%- if section.settings.color_heading_item != "rgba(0,0,0,0)" -%}
#popular-categories-{{ section.id }} .popular-categories__heading{
--color-base: {{ section.settings.color_heading_item }};
}
{%- endif -%}
{%- if section.settings.color_links != "rgba(0,0,0,0)" -%}
#popular-categories-{{ section.id }} .popular-categories__menu{
--color-base: {{ section.settings.color_links }};
}
{%- endif -%}
{%- if section.settings.color_link != "rgba(0,0,0,0)" -%}
#popular-categories-{{ section.id }} .btn-small{
--color-accent: {{ section.settings.color_link }};
}
{%- endif -%}

{%- if section.settings.background != 'hide' -%}
{%- liquid
	capture color
	if section.settings.background == 'color'
    echo section.settings.color_background
    else
    echo section.settings.gradient
    endif
    endcapture
-%}
{%- if color != "rgba(0,0,0,0)" and color != blank -%}
#popular-categories-{{ section.id }}{
  --color-section-background: {{ color }};
}
{%- endif -%}
{%- if section.settings.remove_bottom_spacing -%}
#popular-categories-{{ section.id }}.section-background,
#popular-categories-{{ section.id }} .section-background{
  padding-bottom: 0;
}
{%- endif -%}
{%- endif -%}
{%- if section.settings.color_item_border != "rgba(0,0,0,0)" or section.settings.color_item_background != "rgba(0,0,0,0)" -%}
  #popular-categories-{{ section.id }} .popular-categories:before{
    {%- if section.settings.color_item_background != "rgba(0,0,0,0)" -%}
    background:{{ section.settings.color_item_background }};
    {%- endif -%}
    {%- if section.settings.color_item_border != "rgba(0,0,0,0)" -%}
    border-color:{{ section.settings.color_item_border }};
    {%- else -%}
    border-color:{{ settings.color_base | color_modify: 'alpha', 0.3 }};
    {%- endif -%}
    opacity:1;
  }
{%- endif -%}
{%- if section.settings.color_item_icon != "rgba(0,0,0,0)" -%}
  #popular-categories-{{ section.id }} .popular-categories__link svg path {
    fill:{{ section.settings.color_item_icon }};
  }
{%- endif -%} 
{%- endcapture -%}
<style>
  {{ section_styles }}
  #popular-categories-{{ section.id }} .popular-categories{
    --image-width:{{ section.settings.image_width }}%;
  }
</style>

<div id="popular-categories-{{ section.id }}" class="top-spacing-{{ section.settings.top_spacing }}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="popular-categories">
  <div class="{% if section.settings.width != "default" %}{{ section.settings.width }}{% else %}{{ settings.page_width_main }}{% endif %} mb--last-child-0">
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius mb--last-child-0">{%- endif -%}

    {%- render "section-heading" section:section -%}
    
    {%- if section.blocks.size > 0 -%}
    <div class="el_mt_40 grid">
      {%- for block in section.blocks -%}
      <div class="col-sp-12 {{ section.settings.grid }}">
		<div class="popular-categories border__radius {% if settings.enable_zoom_animation %} scale-border-hover{% endif %}{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.row_reverse %} popular-categories--reverse{% endif %}" {{ block.shopify_attributes }}>
      	  {%- if block.settings.show_icon == 'image' and block.settings.image != blank -%}
          <div class="popular-categories__icon">
            <div class="image-hover-scaling__image">

              {%- liquid
              if section.settings.image_ratio != 'auto'
              capture image_ratio
              if section.settings.image_ratio == '1, round-image'
                echo section.settings.image_ratio | split: ',' | first
              else
                echo section.settings.image_ratio
              endif
              endcapture
              else
                assign image_ratio = block.settings.image.aspect_ratio
              endif
              -%}
              <div class="border__radius{% if section.settings.image_ratio == '1, round-image' %} border__radius--circle{% endif %}" style="--aspect-ratio: {{image_ratio}};">
                {%- assign image = block.settings.image -%}
                {%- assign imagesize = 400 -%}
                {%- capture srcset -%}{{ image | image_url: width: imagesize }} 1x, {{ image | image_url: width: 800 }} 2x{%- endcapture -%}
                {{
                  image
                  | image_url: width: imagesize
                  | image_tag:
                    loading: 'lazy',
                    width: image.width,
                    height: image.height,
                    srcset: srcset
                }}
              </div>
            </div>
          </div>
          {%- elsif block.settings.show_icon == 'image' and block.settings.image == blank -%}
          <div class="popular-categories__icon">
  
            {%- liquid
                capture image_ratio
                if section.settings.image_ratio == '1, round-image'
                echo section.settings.image_ratio | split: ',' | first
                elsif section.settings.image_ratio != 'auto'
                echo section.settings.image_ratio
                endif
                endcapture
            -%}
            
            <div class="image-hover-scaling__image">
              <div class="border__radius placeholder__svg--bg{% if section.settings.image_ratio == '1, round-image' %} border__radius--circle{% endif %}"{% if section.settings.image_ratio != 'auto' %} style="--aspect-ratio: {{image_ratio}};"{% endif %}>
                {%- render "icons-placeholder-other", icon_name:'image-1' -%}
              </div>
            </div>
          </div>
          {%- endif -%}
      
          <div class="mt--first-child-0">
            {%- if block.settings.heading != blank -%}
            <h4 class="popular-categories__heading mb0">
              {{ block.settings.heading }}
            </h4>
            {%- endif -%}
            {%- if block.settings.menu != blank -%}
            <ul class="unstyle-ul popular-categories__menu">
              {%- for link in block.settings.menu.links -%}
              <li>
                <a href="{{ link.url }}" class="{{ section.settings.links_size }} color-base popular-categories__link hover-area">
                  {%- if section.settings.link_icon -%}
                  <svg width="5" height="8" viewBox="0 0 5 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" clip-rule="evenodd" d="M2.86415 4L0 6.91363L1.06792 8L5 4L1.06792 0L0 1.08637L2.86415 4Z" fill="#142C73"/>
                  </svg>
                  {%- endif -%}
                  <span class="animation-underline animation-underline--thin hover-area--default">{{ link.title }}</span></a>
              </li>
              {%- endfor -%}
            </ul>
            {%- endif -%}
            {%- if block.settings.button_name != blank -%}
            <div class="mt15 popular-categories__link-button">
              <a{% if block.settings.url != blank %} href="{{ block.settings.url }}"{% endif %}
                 class="btn-small btn-small-body3 hover-area--native"
                 {% if block.settings.url == blank %} aria-disabled="true"{% endif %}
                >{{ block.settings.button_name }}</a>
            </div>
            {%- endif -%}
          </div>
        </div>
      </div>
      {%- endfor -%}
    </div>
    {%- endif -%}
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}</div>{%- endif -%}
  </div>
</div>

