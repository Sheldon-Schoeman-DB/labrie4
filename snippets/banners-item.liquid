{%- comment -%}
    Renders a product card

    Accepts:
	- section: {Object} Section Liquid object
    - block: {Object} Block Liquid object
    - is_active: if slider

    Usage:
    {%- render 'banners-item', section: section, block: block -%}
{%- endcomment -%}

{%- liquid
  assign check_link = false
  if block.settings.call_to_action == "one_link_banner"
  assign check_link = true
  endif

  if check_link
  assign html_tag_open = '<a' | append: ' href="' | append: block.settings.url | append:'"'
  assign html_tag_close = '</a>'
  else
  assign html_tag_open = '<div'
  assign html_tag_close = '</div>'
  endif
-%}

{%- liquid
  capture image_hover_scaling_up
  if settings.enable_zoom_animation and check_link
  echo 'image-hover-scaling-up'
  endif
  endcapture
  assign main_image_source = block.settings.image
-%}

{%- capture videohtml -%}
{%- if block.settings.video != blank and block.settings.content_type == "video" -%}
<video-js class="section__video-media__box main-video-container"
          data-type="video"
          data-video-autoplay="{% if block.settings.video_slide_mode contains "autoplay" %}true{% else %}false{% endif %}"
          data-buttons="{% unless block.settings.video_slide_mode contains "autoplay" %}true{% else %}false{% endunless %}">
  <video class="slide-video" playsinline=""{% if block.settings.video_slide_mode contains "muted" %} muted=""{% endif %} preload="metadata" loop="">
    {%- assign sources = block.settings.video.sources | last -%}
    <source src="{{ sources.url }}"/>
  </video>
</video-js>
{%- liquid
    if main_image_source == blank
    assign main_image_source = block.settings.video.preview_image
    endif
-%}
{%- elsif block.settings.video_url != blank and block.settings.content_type == "video" -%}
<video-youtube-js class="section__video-media__box section__video-media__youtube main-video-container"
                  data-type="youtube"
                  data-mute="{% if block.settings.video_slide_mode contains "muted" %}true{% else %}false{% endif %}"
                  data-video-autoplay="{% if block.settings.video_slide_mode contains "autoplay" %}true{% else %}false{% endif %}"
                  data-buttons="{% unless block.settings.video_slide_mode contains "autoplay" %}true{% else %}false{% endunless %}">
  <div id="{{ block.settings.video_url.id }}_____{{ section.id }}{{ forloop.index }}" class="embed-player"></div>
</video-youtube-js>
{%- endif -%}
{%- endcapture -%}
{%- capture videobuttonhtml -%}
{%- unless block.settings.video_slide_mode contains "autoplay" -%}
{%- liquid
    assign enable_buttons = false
    if block.settings.video != blank and block.settings.content_type == "video"
    assign enable_buttons = true
    elsif block.settings.video_url != blank and block.settings.content_type == "video"
    assign enable_buttons = true
    endif
    -%}
{%- if enable_buttons -%}
<div class="video-ctrl-banner video-ctrl">
  <div class="video-ctrl__play ctrl__button ctrl__button--right btn-color section__video-media__ctrl--js">
    <div class="icon-play">{%- render "icon-play-2" -%}</div>
    <div class="icon-pause">{%- render "icon-pause" -%}</div>
  </div>
</div>
{%- endif -%}
{%- endunless -%}
{%- endcapture -%}

{{ html_tag_open }} id="image-banner-block-{{ block.id }}" class="section-media-buttons-parent clear-underline image-banner hover-area {{ image_hover_scaling_up }}{% if is_slider %} slideshow for-buttons__item--js{% if is_active %} slideshow-active-in-start active{% endif %}{% endif %}">
  {%- if main_image_source == blank -%}
  <div class="image-hover-scaling__box position-relative">
    <div class="image-hover-scaling__image placeholder__svg--bg border__radius"{% if section.settings.image_ratio != 'auto' %} style="--aspect-ratio: {{section.settings.image_ratio}};"{% endif %}>
      {%- render "icons-placeholder-other", icon_name:'lifestyle' -%}
      {{ videohtml }}
    </div>
    {{ videobuttonhtml }}
  </div>
  {%- else -%}

  {%- capture image_ratio -%}
  {%- if section.settings.image_ratio == 'auto' -%}
  {{ main_image_source.aspect_ratio }}
  {%- else -%}
  {{ section.settings.image_ratio }}
  {%- endif -%}
  {%- endcapture -%}
  <div class="image-hover-scaling__box position-relative">
    {%- liquid
        assign image_ratio_mobile = ''
        if block.settings.image_mobile != blank
        if section.settings.design_type == "image-banner__default"
        assign image_ratio_mobile = '--aspect-ratio-mobile:' | append: block.settings.image_mobile.aspect_ratio | append: ';'
        else
        assign image_ratio_mobile = '--aspect-ratio-phone:' | append: block.settings.image_mobile.aspect_ratio | append: ';'
        endif
        endif
        -%}
    <div class="image-hover-scaling__image border__radius" style="--aspect-ratio: {{image_ratio}};{{image_ratio_mobile}}">
      {%- liquid
          if section.settings.width == "page-wide"
          assign page_is_wide = true
          else
          assign page_is_wide = false
          endif
      -%}
      {%- assign image = main_image_source -%}
      {%- if block.settings.image_mobile == blank -%}
      {%- capture sizes -%}
      (min-width: 1440px) {% if page_is_wide %}calc((100vw - {{ settings.spacing_grid_horizontal }}px) / 2){% else %}calc(({{ settings.page_width }}px - 20px) / 2){% endif %},(min-width: 1025px) calc((100vw - 140px) / 2),(min-width: 577px) calc((100vw - 40px - {{ settings.spacing_grid_horizontal }}px) / 2),calc((100vw - 40px - {{ settings.spacing_grid_horizontal }}px) / 2)
      {%- endcapture -%}
      {%- capture image_class -%}{% if settings.animate_image_show %}image-show--fadein{% endif %}{%- endcapture -%}            
      {%- capture animate_image_show -%}{% if settings.animate_image_show %}this.classList.add('image-loaded');{% endif %}{%- endcapture -%}
      {{
        image
        | image_url: width: image.width
        | image_tag:
          loading: 'lazy',
          width: image.width,
          height: image.height,
          class: image_class,
          sizes: sizes,
          widths: '400, 470, 620, 1240',
          onload: animate_image_show
      }}
      {%- else -%}
      {%- assign imagesize = main_image_source.width | append: 'x' -%}
      {%- assign imagesize_mobile = block.settings.image_mobile.width | append: 'x' -%}
      <picture>
        {%- if section.settings.design_type == "image-banner__default" -%}
        <source srcset="{{ block.settings.image_mobile | img_url: imagesize_mobile }} 1x, {{ block.settings.image_mobile | img_url: imagesize_mobile, scale: 2 }} 2x" media="(max-width: 1024px) and (min-width: 534px)">
        <source srcset="{{ block.settings.image_mobile | image_url: width: 533 }}" media="(max-width: 533px)">
        <source srcset="{{ main_image_source | img_url: imagesize }} 1x, {{ main_image_source | img_url: imagesize, scale: 2 }} 2x" media="(min-width: 1025px)">
        {%- else -%}
        <source srcset="{{ block.settings.image_mobile | image_url: width: 576 }}" media="(max-width: 576px)">
        <source srcset="{{ main_image_source | img_url: imagesize }} 1x, {{ main_image_source | img_url: imagesize, scale: 2 }} 2x" media="(min-width: 577px)">
        {%- endif -%}
        {%- assign image = main_image_source -%}
        {%- capture image_class -%}{% if settings.animate_image_show %}image-show--fadein{% endif %}{%- endcapture -%}
        {%- capture animate_image_show -%}{% if settings.animate_image_show %}this.classList.add('image-loaded');{% endif %}{%- endcapture -%}              
        {{
          image
          | image_url: width: image.width
          | image_tag:
            loading: 'lazy',
            width: image.width,
            height: image.height,
            class: image_class,
            onload: animate_image_show
        }}
      </picture>
      {%- endif -%}
      {{ videohtml }}
    </div>
    {{ videobuttonhtml }}
  </div>
  {%- endif -%}

  {%- liquid
      if block.settings.button_primary_name != blank and block.settings.url != blank and block.settings.call_to_action == "buttons"
      assign heading_link_url = block.settings.url
      elsif block.settings.button_secondary_name != blank and block.settings.button_secondary_url != blank and block.settings.call_to_action == "buttons"
      assign heading_link_url = block.settings.button_secondary_url
      else
      assign heading_link_url = ""
      endif
  -%}

  {%- capture banner_content -%}
  {%- if block.settings.subheading != blank -%}<div class="h5 image-banner__subheading">{{ block.settings.subheading }}</div>{%- endif -%}
  {%- if block.settings.heading != blank -%}
  {%- assign heading_tag = block.settings.heading_tag -%}
  {%- assign heading_tag_content = "" -%}
  {%- if heading_tag == "h1" -%}
  {%- assign heading_tag_content = "h1" -%}
  {%- endif -%}
  {{ '<' | append: heading_tag }} class="image-banner__heading mt20 mb0{% if block.settings.hover_underline %} animation-underline{% endif %}{% if heading_tag_content == "h1" %} {{ heading_tag_content }}{% endif %} {{ block.settings.heading_tag_mobile }}">
  {%- if heading_link_url != "" -%}<a href="{{ heading_link_url }}" class="clear-underline">{%- endif -%}
  {{ block.settings.heading }}
  {%- if heading_link_url != "" -%}</a>{%- endif -%}
  {{ '</' | append: heading_tag }}>
  {%- endif -%}
  {%- if block.settings.description != blank -%}
  <p class="mt15 image-banner__description{% if block.settings.description_size != "normal" %} {{ block.settings.description_size }}{% endif %}">
    {{ block.settings.description }}
  </p>
  {%- endif -%}
  {%- if block.settings.call_to_action == "buttons" -%}
  {%- if block.settings.button_primary_name != blank or block.settings.button_secondary_name != blank -%}
  <div class="image-banner__buttons mt20">
    {%- if block.settings.button_primary_name != blank -%}
    <a href="{{ block.settings.url }}"
       class="btn btn_zoom{% if settings.enable_btn_with_arrow %} btn__animation-arrow{% endif %}"
       {% if block.settings.url == blank %} aria-disabled="true"{% endif %}
       ><span>{{ block.settings.button_primary_name }}</span></a>
    {%- endif -%}
    {%- if block.settings.button_secondary_name != blank -%}
    <a href="{{ block.settings.button_secondary_url }}"
       class="btn btn_zoom btn--secondary{% if settings.enable_btn_with_arrow %} btn__animation-arrow{% endif %}"
       {% if block.settings.button_secondary_url == blank %} aria-disabled="true"{% endif %}
       ><span>{{ block.settings.button_secondary_name }}</span></a>
    {%- endif -%}                
  </div>
  {%- endif -%}
  {%- else -%}
  {%- if block.settings.button_primary_name != blank and check_link -%}
  <div class="image-banner__buttons mt20">
    <div class="btn btn_zoom{% if settings.enable_btn_with_arrow %} btn__animation-arrow{% endif %}"{% if block.settings.url == blank %} aria-disabled="true"{% endif %}><span>{{ block.settings.button_primary_name }}</span></div>
  </div>
  {%- endif -%}
  {%- endif -%}
  {%- endcapture -%}
  {% if banner_content != blank %}
  <div class="image-banner__content {{ block.settings.content_aligment }} {{ block.settings.content_aligment_mobile }}{% if block.settings.show_background %} image-banner__content--bg{% endif %}">
    <div class="mt--first-child-0 {{ block.settings.texts_aligment }} {{ block.settings.texts_aligment_mobile }}">
      {{ banner_content }}
    </div>
  </div>
  {%- endif -%}
{{ html_tag_close }}